section.apartment
  line-height: 0
  height: 100%
  position: relative

.apartment-col
  cf()
  position: relative
  height: 100%

.apartment-title
  span(1/1)
  padding: 1em

.apartment-image
  span(2/3)
  background: url('/img/header-background.jpg') no-repeat center center
  height: 100%
  min-height: 100%
  overflow-y: hidden
  position: relative
  background-size: cover
  text-align: center

.apartment-info
  span(1/3)
  padding: 0 1em 1em
  line-height: 1.5em