.menu
  position: fixed
  z-index: 1000
  top: 0
  left: 0
  right: 0
  width: 100%
  background: rgba($black,1)
  transition(all, .4s, ease)
  box-shadow(0em,0.1em,1em,0,rgba(0,0,0,.5))
  &.is-transparent
    background: rgba($black,0)
    box-shadow(none)
    .menu-divider
      background: white

.menu-item
  font-family: font-form
  display: inline-block
  padding: 1em 2em
  cursor: pointer
  color: white
  font-size: .8em
  transition(all, .4s, ease)
  &:hover
    text-decoration: none
    color: $black
    background: white
  &.is-selected
    color: $black
    background: $grey
  &:nth-child(1)
    margin-right: -0.3em
  &.menu-home
    font-family: font-heading

.menu-divider
  display: inline-block
  letter-spacing: 0
  height: 2em
  background: #515151
  width: .05em
  vertical-align: middle
  transition(all, .4s, ease)
  margin-right: -0.1em

header
  height: 100%

.header-bg
  background: url('/img/header-background.jpg') no-repeat center center fixed
  width: 100%
  height: 100%
  min-height: 100%
  overflow-y: hidden
  position: relative
  background-size: cover
  text-align: center
  &:before
    content: ''
    padding-top: 30%
    height: 300px
  h1,h3
    color: white

.menu-button
  float:right
  padding: .76em
  cursor: pointer
  background: none
  display: none
  .menu-button-bar
    width: 1.5em
    height: .1em
    background: white
    margin-bottom: .4em
    &:last-child
      margin-bottom: 0
  &:hover
    background: white
    .menu-button-bar
      background: $black

.header-tagline
  align(both)

+below(1200px)
  .menu-item
    padding: 1em 1.5em
+below(1000px)
  .menu-item
    padding: 1em 1em

+below(710px)
  .menu-item
    display: none
    &.menu-home
      display: inline-block
  .menu-divider
    display: none
  .menu-button
    display: block