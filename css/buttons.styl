.button
  padding: .8em 1.3em .8em 1.5em
  border: .15em solid $black
  background: none
  text-transform: uppercase
  display: inline-block
  color: $black
  cursor: pointer
  font-family: font-form
  font-size: 1em
  letter-spacing: .04em
  margin: 1em
  box-shadow(0em,0.1em,1em,0,rgba(0,0,0,.1))
  transition(all, .4s, ease)
  &:hover
    color: white
    background: $black
  &.is-white
    color: white
    background: rgba(255,255,255,0)
    border-color: white
    box-shadow(0em,0.1em,1em,0,rgba(0,0,0,.5))
    &:hover
      color: white
      background: rgba(255,255,255,0.2)
      border-color: white
  &:after
    content: ' ‚ùØ'
    margin-bottom: .3em