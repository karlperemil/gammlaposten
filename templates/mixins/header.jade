mixin header(page)
  - var headerclass = 'header-' + page
  .header(class='#{headerclass}')
    .header-menu
      a.header-menu-item.is-home(href='/') #{copy.menu4}
      a.header-menu-item.is-berattelser(href='/berattelser') !{copy.menu1}
      a.header-menu-item.is-story(href='/dela-med-dig') !{copy.menu2}
      a.header-menu-item.is-ambassador(href='/ambassador') !{copy.menu3}
    .header-content
      a(href='http://vision.se/socialtjanst', target='_blank'): img.header-logo(src='/img/logo3-white.png')
      h3.times.bold Nu bygger vi
      h1 
